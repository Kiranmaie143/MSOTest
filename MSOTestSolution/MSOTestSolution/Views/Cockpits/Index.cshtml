@model IEnumerable<MSOTestSolution.Models.Cockpit>

@{
    ViewData["Title"] = "Index";
}
<ul class="nav nav-pills nav-justified">
    <li class="nav-item">
        <a class="nav-link "  style="background-color: #eee;">Welcome</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" style="background-color: #eee;" asp-area="" asp-controller="Cockpits" asp-action="Index">Cockpit</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" style="background-color: #eee;" asp-area="" asp-controller="Cockpits" asp-action="Create">New Task</a>
    </li>
  </ul>
<h4>Tasks</h4>

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr class="table-active">
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Responsible)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
  
            <th>
                @Html.DisplayNameFor(model => model.Progress)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @if (item.Status == "1")
                    {
                        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="9" cy="9" r="9" fill="#F13C4E" />
                        </svg>
                    }
                    else if (item.Status == "2")
                    {
                        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <circle cx="9" cy="9" r="9" fill="#F7CA27" />
                        </svg>
                    }
                    else
                    {
                        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M18.0001 9C18.0001 13.9706 13.9707 18 9.0001 18C4.02954 18 9.86515e-05 13.9706 9.86515e-05 9C9.86515e-05 4.02944 4.02954 0 9.0001 0C13.9707 0 18.0001 4.02944 18.0001 9Z" fill="#99D002" />
                        </svg>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Responsible)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Progress)
            </td>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
